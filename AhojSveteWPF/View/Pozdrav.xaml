        <RadioButton x:Name="Bye" Content="Bye" HorizontalAlignment="Left" Margin="528,289,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Tlačenka" Content="Button" HorizontalAlignment="Center" Height="62" Margin="0,342,0,0" VerticalAlignment="Top" Width="168" Click="Button_Click"/>


    </Grid>
</Window>
